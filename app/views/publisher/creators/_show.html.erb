<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content modal-two-sections">
    <div class="modal-left-section">
      <img src="<%= @creator.cover_image_url %>"/>
      <div class="creator-details">
        <span><strong><%= @creator.name %></strong></span>
        <span><%= @creator.description %></span>
        <span>0 Views</span>
        <%= link_to publisher_path(@creator.id) do %>
          <button>Chat with them</button>
        <% end %>
      </div>
    </div>
    <div>
    <div class="modal-right-section">
      <div class="video-header">
        <div>
          <span class="video-title"><strong>Creator Content</strong></span>
        </div>
        <div class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><strong>&times;</strong></span>
        </div>
      </div>
      <div class="creator-videos">
        <% @videos.each do |video| %>
          <div class="section-video">
            <img src="<%= video.thumbnail %>" />
            <div>
              <span><%= video.name %></span>
              <span><%= video.description %></span>
              <span>0 views</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
