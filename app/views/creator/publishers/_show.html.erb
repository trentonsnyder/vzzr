<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content modal-two-sections">
    <div class="modal-left-section">
      <img src="<%= @publisher.cover_image_url %>"/>
      <div class="creator-details">
        <div>
          <span style="color: #6F3291; font-size: 24px"><strong><%= @publisher.name %></strong></span>
          <span style="color: #9B9B9B; font-size: 14px"><%= @publisher.description %></span>
          <span style="color: #EC4D77; font-size: 16px">21,099 / mo. views</span>
          <span style="color: #EC4D77; font-size: 16px">668 PPV</span>
        </div>
        <%= link_to creator_path(@publisher.id) do %>
          <button class="button-primary">Chat with them</button>
        <% end %>
      </div>
    </div>
    <div>
    <div class="modal-right-section">
      <div class="video-header">
        <div>
          <span class="video-title"><strong>Example Content</strong></span>
        </div>
        <div class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"><strong>&times;</strong></span>
        </div>
      </div>
      <div class="creator-videos">
        <% @videos.each do |video| %>
          <div class="section-video">
            <img src="<%= video.thumbnail %>" />
            <div>
              <span style="color: #6F3291; font-size: 16px"><%= video.name %></span>
              <span style="color: #9B9B9B; font-size: 14px"><%= video.description %></span>
              <span style="color: #EC4D77; font-size: 14px"><%= [693, 667, 19, 208, 770].sample %> views</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
