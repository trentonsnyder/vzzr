<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <%= form_for(@listing, url: creator_listings_path, remote: true, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>
      <div class="new-listing-form">
        <div class="listing-header">
          <div>
            <span class="listing-title"><strong>Feature Details</strong></span>
          </div>
          <div class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"><strong>&times;</strong></span>
          </div>
        </div>
        <div class="listing-field">
          <%= f.text_field :name, placeholder: 'name' %>
        </div>
        <div class="listing-field">
          <%= f.text_area :description, placeholder: 'description' %>
        </div>
        <div class="listing-field">
          <%= f.number_field :genre_id, value: 1, placeholder: 'genre' %>
        </div>
        <div class="listing-field-video">
          <%= f.label :thumbnail, "Cover Image"%>
          <%= f.file_field :thumbnail %>
        </div>
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</div>
